<body>
	<script type="text/javascript">
		function example() {
			if (true) {
				// let : 지역변수
				// const : 지역변수, 값을 수정할 수 있는 상수의 개념
				// var : 전역변수
				var v1 = "var";
				let l1 = "let";
				const c1 = "const"
				document.write(v1 + "<br>");
				document.write(l1 + "<br>");
				document.write(c1 + "<br>");
				v1 = "var2";
				l1 = "let2";
				c1 = "const2";
				document.write(v1 + "<br>");
				document.write(l1 + "<br>");
				document.write(c1 + "<br>");
			}
			document.write(v1 + "<br>");
			document.write(l1 + "<br>");
			document.write(c1 + "<br>");
		}

		example();
	</script>
</body>
