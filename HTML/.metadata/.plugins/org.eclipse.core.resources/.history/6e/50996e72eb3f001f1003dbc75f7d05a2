		function example() {
			if(true){
				// let, const : 지역변수
				// var : 전역변수
				var v1 = "var";
				let l1 = "let";
				const c1 = "const"
				document.write(v1+"<br>");
				document.write(l1+"<br>");
				document.write(c1+"<br>");
				v1 = "var2";
				l1 = "let2";
				c1 = "const2"

					document.write(v1+"<br>");
					document.write(l1+"<br>");
					document.write(c1+"<br>");
			}
			document.write(v1+"<br>");
			document.write(l1+"<br>");
			document.write(c1+"<br>");
		}
		
		example();
	</script>
